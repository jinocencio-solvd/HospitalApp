<mapper namespace="com.laba.interfaces.daos.IAppointmentDAO">
    <resultMap id="com.laba.models.AppointmentResultMap" type="Appointment" autoMapping="false">
        <result property="id" column="id"/>
        <result property="patientId" column="patient_id"/>
        <result property="clinicianId" column="clinician_id"/>
        <result property="roomId" column="room_id"/>
        <result property="date" column="appointment_date"/>
        <result property="time" column="appointment_time"/>
    </resultMap>
    <insert id="save" parameterType="com.laba.models.Appointment">
		INSERT INTO appointments (id, patient_id, clinician_id, room_id, appointment_date, appointment_time)
		  VALUES (#{id}, #{patient_id}, #{clinician_id}, #{room_id}, #{appointment_date}, #{appointment_time})
	</insert>
    <update id="update" parameterType="com.laba.models.Appointment">
		
	</update>
    <delete id="deleteById" parameterType="int">
		
	</delete>
    <select id="getById" parameterType="int">
		
	</select>
</mapper>